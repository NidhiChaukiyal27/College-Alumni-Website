        /* Hero Section */
        .hero {
            padding: 4rem 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .hero h1 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 3rem;
            color: var(--dark);
            position: relative;
            display: inline-block;
            left: 50%;
            transform: translateX(-50%);
        }
        
        .hero h1::after {
            content: '';
            position: absolute;
            width: 50%;
            height: 4px;
            background: linear-gradient(to right, var(--primary), var(--accent));
            bottom: -10px;
            left: 25%;
            border-radius: 2px;
        }
        
        .profiles-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 2rem;
        }
        
        .profile-card {
            background-color: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .profile-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        
        .profile-image {
            height: 280px;
            overflow: hidden;
            position: relative;
        }
        
        .profile-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }
        
        .profile-card:hover .profile-image img {
            transform: scale(1.05);
        }
        
        .profile-info {
            padding: 1.5rem;
            position: relative;
        }
        
        .profile-meta {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
        }
        
        .year, .course {
            display: inline-block;
            font-size: 0.85rem;
            color: var(--gray);
            background-color: #f1f5f9;
            padding: 0.25rem 0.75rem;
            border-radius: 50px;
            margin-bottom: 0.5rem;
        }
        
        .profile-info h2 {
            font-size: 1.5rem;
            margin: 0.5rem 0;
            color: var(--dark);
        }
        
        .profile-info p {
            color: var(--gray);
            margin-bottom: 0.25rem;
        }
        
        .profile-info p:last-of-type {
            font-weight: 600;
            color: var(--accent);
            margin-bottom: 1.5rem;
        }
        
        .explore-button {
